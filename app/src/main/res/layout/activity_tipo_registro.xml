<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    android:padding="14dp"
    android:layout_margin="14dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_n_ulimate"
        android:layout_weight=".2"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenidos a la App de Venezuela Responsable - (RCVMovil), seleccione el metodo de registro de su preferencia.

         1. Manual: debera indicar datos basico para el registro.
         2. Escaner QR: debe escanear el codigo QR de su contrato vigente."
        android:layout_weight=".8"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"

            >
            <ImageView
                android:id="@+id/imgUs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_box_grey"
                android:padding="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Metodo Manual"
                android:id="@+id/btnManual"
                android:background="@drawable/boton_box"
                android:layout_gravity="center"
                android:padding="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:id="@+id/imgQr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_box_grey"
                android:padding="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Metodo QR"
                android:id="@+id/btnQr"
                android:background="@drawable/boton_box"
                android:layout_gravity="center"

                android:padding="10dp"
                />

        </LinearLayout>




</LinearLayout>